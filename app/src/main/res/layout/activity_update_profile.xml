<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/broken_white"
        android:orientation="vertical"
        android:focusable="true"
        android:focusableInTouchMode="true"
        tools:context=".RegisterActivity">

    <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        <LinearLayout android:layout_width="match_parent"
                      android:layout_height="match_parent"
                      android:padding="@dimen/padding_menu"
                      android:background="@color/broken_white"
                      android:orientation="vertical">

            <TextView android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:layout_gravity="center"
                      android:textSize="@dimen/heading"
                      android:text="Edit Data"/>

            <android.support.design.widget.TextInputLayout
                    android:id="@+id/name_etxt_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:imeOptions="flagNoExtractUi">

                <android.support.design.widget.TextInputEditText
                        android:id="@+id/name_etxt"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:imeOptions="flagNoExtractUi"
                        android:hint="Nama"
                        android:inputType="textPersonName"/>
            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                    android:id="@+id/email_etxt_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:imeOptions="flagNoExtractUi">

                <android.support.design.widget.TextInputEditText
                        android:id="@+id/email_etxt"
                        android:layout_marginTop="10dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:imeOptions="flagNoExtractUi"
                        android:hint="Alamat Email"
                        android:inputType="textEmailAddress"/>
            </android.support.design.widget.TextInputLayout>


            <android.support.design.widget.TextInputLayout
                    android:id="@+id/calendar_etxt_layout"
                    android:layout_marginTop="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:imeOptions="flagNoExtractUi">

                <android.support.design.widget.TextInputEditText
                        android:id="@+id/birthday_etxt"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:imeOptions="flagNoExtractUi"
                        android:clickable="true"
                        android:focusable="false"
                        android:hint="Tanggal Lahir"
                        android:inputType="text"/>
            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                    android:id="@+id/address_etxt_layout"
                    android:layout_marginTop="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:imeOptions="flagNoExtractUi">

                <android.support.design.widget.TextInputEditText
                        android:id="@+id/address_etxt"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:imeOptions="flagNoExtractUi"
                        android:hint="Alamat"
                        android:inputType="text"/>
            </android.support.design.widget.TextInputLayout>

            <LinearLayout android:layout_width="match_parent"
                          android:layout_height="wrap_content"
                          android:layout_marginBottom="10dp"
                          android:layout_marginTop="20dp">

                <RadioGroup android:id="@+id/radioGender"
                            android:orientation="vertical"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                    <RadioButton android:id="@+id/radioMale"
                                 android:layout_width="wrap_content"
                                 android:layout_height="wrap_content"
                                 android:layout_marginBottom="5dp"
                                 android:text="Laki - laki"/>

                    <RadioButton android:id="@+id/radioFemale"
                                 android:layout_width="wrap_content"
                                 android:layout_height="wrap_content"
                                 android:text="Perempuan"/>

                </RadioGroup>
            </LinearLayout>

            <android.support.design.widget.TextInputLayout
                    android:id="@+id/phone_etxt_layout"
                    android:layout_marginTop="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:imeOptions="flagNoExtractUi">

                <android.support.design.widget.TextInputEditText
                        android:id="@+id/phone_etxt"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:imeOptions="flagNoExtractUi"
                        android:hint="Nomor Telepon"
                        android:inputType="phone"/>
            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                    android:id="@+id/city_etxt_layout"
                    android:layout_marginTop="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:imeOptions="flagNoExtractUi">

                <android.support.design.widget.TextInputEditText
                        android:id="@+id/city_etxt"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:imeOptions="flagNoExtractUi"
                        android:hint="Asal Kota"
                        android:inputType="text"/>
            </android.support.design.widget.TextInputLayout>

            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:gravity="center"
                    android:orientation="horizontal">

                <Button
                        android:id="@+id/cancel_btn"
                        android:layout_width="@dimen/button_size"
                        android:layout_height="wrap_content"
                        android:background="@drawable/rounded_border"
                        android:backgroundTint="@color/trueRed"
                        android:text="Batal"/>

                <Button
                        android:id="@+id/save_btn"
                        android:layout_marginLeft="@dimen/button_size"
                        android:layout_width="@dimen/button_size"
                        android:layout_height="wrap_content"
                        android:background="@drawable/rounded_border"
                        android:backgroundTint="@color/trueBlue"
                        android:text="Simpan"/>

            </LinearLayout>

        </LinearLayout>
    </ScrollView>

    <com.github.ybq.android.spinkit.SpinKitView
            android:id="@+id/spin_kit"
            style="@style/SpinKitView.Small.WanderingCubes"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:layout_gravity="center|center_horizontal"
            app:SpinKit_Color="@color/colorAccent"/>

</RelativeLayout>