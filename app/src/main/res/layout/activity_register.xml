<?xml version="1.0" encoding="utf-8"?>
<ScrollView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/broken_white"
        android:orientation="vertical"
        android:focusable="true"
        android:focusableInTouchMode="true"
        tools:context=".RegisterActivity">

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="@dimen/padding_menu"
            android:background="@color/broken_white"
            android:orientation="vertical">

    <TextView android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_gravity="center"
              android:text="Daftar"/>

    <android.support.design.widget.TextInputLayout
            android:id="@+id/name_etxt_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:imeOptions="flagNoExtractUi">

        <android.support.design.widget.TextInputEditText
                android:id="@+id/name_etxt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:imeOptions="flagNoExtractUi"
                android:hint="Nama"
                android:inputType="text"/>
    </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout
            android:id="@+id/email_etxt_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:imeOptions="flagNoExtractUi">

        <android.support.design.widget.TextInputEditText
                android:id="@+id/email_etxt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:imeOptions="flagNoExtractUi"
                android:hint="Alamat Email"
                android:inputType="text"/>
    </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout
            android:id="@+id/password_etxt_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:imeOptions="flagNoExtractUi"
            app:passwordToggleEnabled="true">

        <android.support.design.widget.TextInputEditText
                android:id="@+id/password_etxt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:imeOptions="flagNoExtractUi"
                android:hint="Kata sandi"
                android:inputType="textPassword"/>
    </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout
            android:id="@+id/konfirmasi_etxt_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:imeOptions="flagNoExtractUi"
            app:passwordToggleEnabled="true">

        <android.support.design.widget.TextInputEditText
                android:id="@+id/confirm_etxt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:imeOptions="flagNoExtractUi"
                android:hint="Konfirmasi kata sandi"
                android:inputType="textPassword"/>
    </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
                android:id="@+id/calendar_etxt_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:imeOptions="flagNoExtractUi">

            <android.support.design.widget.TextInputEditText
                    android:id="@+id/calendar_etxt"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:imeOptions="flagNoExtractUi"
                    android:clickable="true"
                    android:hint="Tanggal Lahir"
                    android:inputType="text"/>
        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
                android:id="@+id/address_etxt_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:imeOptions="flagNoExtractUi">

            <android.support.design.widget.TextInputEditText
                    android:id="@+id/address_etxt"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:imeOptions="flagNoExtractUi"
                    android:hint="Alamat Email"
                    android:inputType="text"/>
        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
                android:id="@+id/phone_etxt_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:imeOptions="flagNoExtractUi">

            <android.support.design.widget.TextInputEditText
                    android:id="@+id/phone_etxt"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:imeOptions="flagNoExtractUi"
                    android:hint="Nomor Telepon"
                    android:inputType="text"/>
        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
                android:id="@+id/city_etxt_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:imeOptions="flagNoExtractUi">

            <android.support.design.widget.TextInputEditText
                    android:id="@+id/city_etxt"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:imeOptions="flagNoExtractUi"
                    android:hint="Asal Kota"
                    android:inputType="text"/>
        </android.support.design.widget.TextInputLayout>

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:gravity="center"
            android:orientation="horizontal">

        <Button
                android:id="@+id/cancel_btn"
                android:layout_width="@dimen/button_size"
                android:layout_height="wrap_content"
                android:background="@drawable/rounded_border"
                android:text="Batal"/>

        <Button
                android:id="@+id/save_btn"
                android:layout_marginLeft="@dimen/button_size"
                android:layout_width="@dimen/button_size"
                android:layout_height="wrap_content"
                android:background="@drawable/rounded_border"
                android:text="Simpan"/>

    </LinearLayout>
    </LinearLayout>
</ScrollView>