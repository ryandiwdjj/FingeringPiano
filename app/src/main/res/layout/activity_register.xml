<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="@dimen/padding_menu"
        android:background="@color/lightBlue"
        android:orientation="vertical"
        android:focusable="true"
        android:focusableInTouchMode="true"
        tools:context=".RegisterActivity">

    <TextView android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_gravity="center"
              android:text="Daftar"/>

    <com.rengwuxian.materialedittext.MaterialEditText
            android:id="@+id/nama_etxt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/rounded_border"
            android:padding="@dimen/padding_edit_text"
            android:inputType="textPersonName"
            android:hint="Nama"/>

    <com.rengwuxian.materialedittext.MaterialEditText
            android:id="@+id/email_etxt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/rounded_border"
            android:padding="@dimen/padding_edit_text"
            android:inputType="textEmailAddress"
            android:hint="Email"/>

    <com.rengwuxian.materialedittext.MaterialEditText
            android:id="@+id/password_etxt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/rounded_border"
            android:padding="@dimen/padding_edit_text"
            android:inputType="textPassword"
            android:hint="Password"/>

    <com.rengwuxian.materialedittext.MaterialEditText
            android:id="@+id/confirm_password_etxt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/rounded_border"
            android:padding="@dimen/padding_edit_text"
            android:inputType="textPassword"
            android:hint="Konfirmasi Password"/>

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal">

        <Button
                android:id="@+id/cancel_btn"
                android:layout_width="@dimen/button_size"
                android:layout_height="wrap_content"
                android:background="@drawable/rounded_border"
                android:text="Batal"/>

        <Button
                android:id="@+id/save_btn"
                android:layout_marginLeft="@dimen/button_size"
                android:layout_width="@dimen/button_size"
                android:layout_height="wrap_content"
                android:background="@drawable/rounded_border"
                android:text="Simpan"/>

    </LinearLayout>

</LinearLayout>