<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="com.fingering.fingeringpiano">

    <uses-permission android:name="android.permission.INTERNET"/>

    <application
            android:allowBackup="true"
            android:icon="@mipmap/ic_launcher"
            android:label="@string/app_name"
            android:networkSecurityConfig="@xml/network_security_config"
            android:roundIcon="@mipmap/ic_launcher_round"
            android:supportsRtl="true"
            android:theme="@style/Theme.AppCompat.Light.NoActionBar">
        <activity
                android:name="com.fingering.fingeringpiano.UpdateProfileActivity">
        </activity>
        <activity
                android:name="com.fingering.fingeringpiano.LandingPage"
                android:screenOrientation="landscape">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity
                android:name="com.fingering.fingeringpiano.LoginActivity"
                android:screenOrientation="landscape">
        </activity>
        <activity
                android:name="com.fingering.fingeringpiano.RegisterActivity">
        </activity>
        <activity
                android:name="com.fingering.fingeringpiano.VideoActivity"
                android:screenOrientation="landscape">
        </activity>
        <activity
                android:name="com.fingering.fingeringpiano.SearchActivity"
                android:screenOrientation="landscape">
        </activity>
        <activity
                android:name="com.fingering.fingeringpiano.MainActivity"
                android:screenOrientation="landscape">
        </activity>
    </application>

</manifest>